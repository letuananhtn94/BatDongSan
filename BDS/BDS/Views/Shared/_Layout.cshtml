<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bất Động Sản</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    @RenderSection("css", required: false)
   
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/libs/jquery-1.7.min.js">\x3C/script>')</script>
   

</head>
<body data-spy="scroll" data-target=".navbar-fixed-top" >

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")"><img src="~/images/banner01.jpg" class="img-circle" alt="Cinque Terre" width="50" height="50"></a>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li>@Html.ActionLink("Tìm kiếm", "List", "Home")</li>
                    <li>@Html.ActionLink("Giới thiệu", "About", "Home")</li>
                    <li>@Html.ActionLink("Hướng dẫn", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid" style="padding:0px">
        @RenderBody()
    </div>



    <footer class="container-fluid text-center" >
        <div>
            <a href="#" class="scrollup" data-toggle="tooltip" data-placement="bottom" title="Lên đầu trang!">Scroll</a>
        </div>
        <div class="container text-center">
            <img src="/Images/banner01.jpg" class="img-circle" alt="Cinque Terre" width="60" height="60">
            <div class="_list_menu">
                <ul class="">
                    <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li>@Html.ActionLink("Tìm kiếm", "List", "Home")</li>
                    <li>@Html.ActionLink("Giới thiệu", "About", "Home")</li>
                    <li>@Html.ActionLink("Hướng dẫn", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
        <p>&copy; @DateTime.Now.Year - Bất động sản dành cho người có thu nhập trung bình thấp</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/bundles/client")

    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('a[href="' + this.location.pathname + '"]').parents('li,ul').addClass('active');

            $('select').select2({
                theme: "bootstrap"
            });


            $(window).scroll(function () {
                if ($(this).scrollTop() > 500) {
                    $('.scrollup').fadeIn();
                } else {
                    $('.scrollup').fadeOut();
                }
            });

            $('.scrollup').click(function () {
                $("html, body").animate({
                    scrollTop: 0
                }, 600);
                return false;
            });

        });
    </script>
</body>
</html>
